<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardElevation="0dp"
    android:id="@+id/cardView_my_course">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_myCourse"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/img_course"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/title_myCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/date_myCourse"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_myCourse"
            android:maxLines="1"
            android:inputType="text"/>
        <TextView
            android:id="@+id/date_myCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021-01-25"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="4dp"/>
        <TextView
            android:id="@+id/startPoint_myCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Point"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/title_myCourse"
            android:layout_toRightOf="@id/img_myCourse"/>
        <TextView
            android:id="@+id/point_myCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/title_myCourse"
            android:layout_toRightOf="@id/startPoint_myCourse"/>
        <TextView
            android:id="@+id/endPoint_myCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Point"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/title_myCourse"
            android:layout_toRightOf="@id/point_myCourse"
            android:maxLines="1"
            android:inputType="text"/>

        <LinearLayout
            android:id="@+id/info_myCourse"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/img_myCourse"
            android:layout_below="@id/startPoint_myCourse"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp">
            <TextView
                android:id="@+id/distance_myCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9999.50 km"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textStyle="bold"
                android:textColor="@color/graylight"
                android:paddingHorizontal="5dp"/>
            <TextView
                android:id="@+id/time_myCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="58 ë¶„"
                android:textSize="14sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_below="@id/endPoint_myCourse"
            android:layout_toLeftOf="@id/like_myCourse"
            android:src="@drawable/ic_like_checked"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            app:tint="@color/colorAccent" />

        <TextView
            android:id="@+id/like_myCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/endPoint_myCourse"
            android:layout_alignParentRight="true"
            android:paddingEnd="4dp"
            android:text="1654"
            android:textAlignment="textEnd"
            android:gravity="center"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_below="@id/img_myCourse"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="110dp"
            android:background="@color/graylight"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>